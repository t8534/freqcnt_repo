#ifndef LCD_HIT_H_
#define LCD_HIT_H_

#define LCD_DATA_NIBBLE_CONFIG	DDRD |= 0b00001111;  // 1 - output for PD0 to PD3
#define LCD_DATA_NIBBLE_WRITE(nibble)        do {                                    \
	PORTD = PORTD & 0xf0;               \
	PORTD = PORTD | (nibble & 0x0F);    \
} while(0)

#define LCD_RS_CONFIG	DDRD |=  (1 << PD4)
#define LCD_RS_SET		PORTD |= (1 << PD4)
#define LCD_RS_RESET	PORTD &= ~(1 << PD4)

#define LCD_RW_CONFIG	DDRD |=  (1 << PD7);
#define LCD_RW_SET		PORTD |= (1 << PD7)
#define LCD_RW_RESET	PORTD &= ~(1 << PD7)

#define LCD_EN_CONFIG	DDRC |=  (1 << PC6);
#define LCD_EN_SET		PORTC |= (1 << PC6)
#define LCD_EN_RESET	PORTC &= ~(1 << PC6)




#endif /* LCD_HIT_H_ */